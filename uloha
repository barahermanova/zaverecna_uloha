def smallest_range(input_string, input_first_word, input_second_word):

    word = ""
    latest_chosen = None
    current_counter = 0
    minimal_counter = None

    for letter in input_string:
        if letter == " ":
            if word == input_first_word or input_second_word:
                if latest_chosen is not None and word and (
                        minimal_counter > current_counter or minimal_counter is None):
                    minimal_counter = current_counter
                current_counter = 0
                latest_chosen = word
            current_counter = current_counter + 1
            word = ""
        else:
            word = word + letter
    else:
        return minimal_counter - 1


if __name__ == "__main__":
    input_string = input("Text without punctuation: ")
    if input_string == "":
        raise ValueError("You need to fill your text")
    input_string = input_string + " "

    input_first_word = input("First word: ")
    if input_first_word == "":
        raise ValueError("You need to fill your first word")

    input_second_word = input("Second word: ")
    if input_second_word == "":
        raise ValueError("You need to fill your second word")

    minimal_counter = smallest_range(input_string, input_first_word, input_second_word)
    print("The smallest number of words between your chosen words is: " + str(minimal_counter))
